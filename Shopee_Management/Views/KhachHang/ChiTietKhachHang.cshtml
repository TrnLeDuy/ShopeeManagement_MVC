@model Shopee_Management.Models.KHACHHANG

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChiTietKhachHang</title>
    <!-- Include necessary CSS -->
    <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">


    <!-- Include jQuery library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Include jQuery UI library -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-image: url('https://png.pngtree.com/thumb_back/fh260/background/20200714/pngtree-modern-double-color-futuristic-neon-background-image_351866.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

        .control-label {
            margin-bottom: 5px;
        }

        .custom-file-upload {
            display: inline-block;
            padding: 6px 12px;
            cursor: pointer;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .cloud-icon {
            display: inline-block;
            width: 16px;
            height: 16px;
            background: url('https://icons8.com/icon/vtx4t5OUOrC1/biogefahr') no-repeat;
            background-size: contain;
            vertical-align: text-bottom;
            margin-right: 5px; /* Adjust the margin as needed */
        }


        .form-group {
            margin-bottom: 20px;
            max-width: 350px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
            }

            .form-group .form-control {
                width: calc(100% - 30px);
                max-width: 100%; /* Adjust the max-width as needed */
                height: 40px;
                padding: 0 15px;
                border-radius: 5px;
                border: 1px solid #ddd;
                background-color: #fff;
                font-size: 16px;
            }


        .btn {
            display: inline-block;
            background-color: #512da8;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

            .btn:hover {
                background-color: #6a1b9a;
            }

            .btn:active {
                background-color: #4a148c;
            }

        input[type="file"] {
            display: none;
        }

        .container {
            position: relative;
            width: 100%;
        }

        #avatarPreview {
            max-width: 100px;
            height: auto;
        }

        .overlay {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            height: 100%;
            width: 100%;
            opacity: 0.5; /* Adjust the opacity as needed */
            background-color: #000; /* Adjust the background color as needed */
        }

        .text {
            color: white;
            font-size: 20px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .form-horizontal {
            position: relative;
            max-width: 500px; /* Adjust the max-width as needed */
            margin: 120px auto;
            background: #f7f7f7;
            padding: 25px;
            border-radius: 5px;
            box-shadow: 0 0 10px #0000001a;
        }

        .image-preview-container {
            position: absolute;
            top: 110px;
            right: 40px;
            width: 100px;
            height: 100px;
            border: 1px solid #ddd;
            border-radius: 5px;
            overflow: hidden;
            background-color: floralwhite;
        }

        .image-preview {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
    </style>

    <script>
        // Initialize the datepicker
        $(function () {
            $("#ngay_sinh").datepicker({
                dateFormat: 'yy-mm-dd', // Format the date as per your requirement
                changeMonth: true,
                changeYear: true,
                yearRange: '1900:c' // Display years from 1900 to the current year
            });
        });

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#avatarPreview').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        function previewImage(input) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#avatarPreview').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    </script>
</head>
<body>
    @using (Html.BeginForm("ChiTietKhachHang", "KhachHang", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>THÔNG TIN CHI TIẾT CỦA QUÝ KHÁCH</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_kh)

        <div class="form-group">
            <div class="control-label">Họ và tên</div>
            @Html.EditorFor(model => model.ho_ten, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ho_ten, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="control-label">Ngày sinh</div>
            @Html.EditorFor(model => model.ngay_sinh, new { htmlAttributes = new { @class = "form-control", @id = "ngay_sinh", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.ngay_sinh, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="control-label">Địa chỉ</div>
            @Html.EditorFor(model => model.dia_chi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.dia_chi, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="avatarFile" class="custom-file-upload">
                <i class="fas fa-cloud-upload-alt"></i> Hình ảnh đại diện
            </label>
            <input type="file" name="avatarFile" id="avatarFile" onchange="previewImage(this);" />
            @Html.ValidationMessageFor(model => model.avatar, "", new { @class = "text-danger" })
        </div>

        <div class="image-preview-container">
            <img id="avatarPreview" class="image-preview" />
        </div>

        <div class="form-group">
            <input type="submit" value="Hoàn tất" class="btn" />
        </div>
    </div>
    }
</body>
</html>
