@model List<Shopee_Management.Models.DONHANG>

@{
    ViewBag.Title = "LichSuDonMua";
    Layout = "~/Views/Shared/_ShopeeLayout.cshtml";
}
<style>
    h2 {
        color: #fb5731;
        text-align: center;
    } 

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ddd;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    img {
        max-width: 50px;
        max-height: 50px;
    }

    hr {
        border: 0;
        height: 1px;
        background: #ccc;
        margin: 20px 0;
    }

    p {
        margin: 5px 0;
    }

        p.no-orders {
            color: #888;
        }
</style>
<h2>Lịch Sử Đơn Mua</h2>

@if (Model != null && Model.Any())
{
    foreach (var order in Model)
    {
        <div>
            <h4>Order ID: @order.id_don</h4>
            <p>Order Date: @order.ngay_dat</p>
            <p>Total Amount: @order.thanh_tien</p>

            <table border="1">
                <tr>
                    <th>Selling Shop ID</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Product Image</th>
                </tr>
                @foreach (var item in order.CHITIETDONHANGs)
                {
                    <tr>
                        <td>@item.CHITIETSP.id_nbh</td>
                        <td>@item.CHITIETSP.SANPHAM.ten_sp</td>
                        <td>@item.so_luong</td>
                        <td>@item.gia_tien</td>
                        <td><img src="@item.CHITIETSP.hinh_sp" alt="Product Image" style="width: 50px; height: 50px;" /></td>
                    </tr>
                }
            </table>
        </div>
        <hr />
    }
}
else
{
    <p>No orders found for the current customer.</p>
}
