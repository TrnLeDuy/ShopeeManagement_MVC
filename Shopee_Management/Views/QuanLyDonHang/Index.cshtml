@model IEnumerable<Shopee_Management.Models.DONHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .table th {
            background-color: #ffcc00;
            color: #333;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:nth-child(odd) {
            background-color: #f0f8ff;
        }



    .action-links a {
        margin-right: 5px;
        color: #0000ff;
    }

    p {
        margin-top: 20px;
        color: #555;
    }

    h2 {
        font-size: 24px;
        margin-bottom: 20px;
        color: #ee4d2d;
    }

    .btn {
        min-width: 70px;
        height: 34px;
        text-decoration: none;
        border: none;
        border-radius: 2px;
        font-size: 1.2rem;
        padding: 0 12px;
        outline: none;
        cursor: pointer;
        color: #fff !important;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        line-height: 1.6rem;
    }

        .btn.btn--add {
            color: #fff;
            background-color: #0ab618;
        }

        .btn.btn--edit {
            color: #fff;
            background-color: #ffce3e;
        }

        .btn.btn--delete {
            color: #fff;
            background-color: #e72311;
        }

    .btn-form__controls-mr {
        margin-right: 8px;
    }
</style>

<h2>QUẢN LÝ ĐƠN HÀNG</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Ngày đặt
        </th>
        <th>
            Trạng thái đơn hàng
        </th>
        <th>
            Trạng thái thanh toán
        </th>
        <th>
            Tổng tiền
        </th>
        <th>
            Thành tiền
        </th>
        <th>
            Ngày giao
        </th>
        <th>
            Họ tên khách hàng
        </th>
        <th>
            Tên cửa hàng
        </th>
        <th>
            Phương thức thanh toán
        </th>
        <th>
            Mã khuyến mãi
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ngay_dat)
            </td>          
            @{
                if (item.trang_thai_dh == 0)
                {
                    <td>Chưa giao hàng</td>
                }
                if (item.trang_thai_dh == 1)
                {
                    <td>Đang giao hàng</td>
                }
                if (item.trang_thai_dh == 2)
                {
                    <td>Đã giao hàng</td>
                }
            }
            @{
                if (item.tt_thanh_toan == 1)
                {
                    <td>Chưa thanh toán</td>
                }
                if (item.tt_thanh_toan == 2)
                {
                    <td>Đã thanh toán</td>
                }
            }
            <td>
                @Html.DisplayFor(modelItem => item.tong_cong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.thanh_tien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngay_giao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KHACHHANG.ho_ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGUOIBANHANG.ten_cua_hang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PTTT.ten_pttt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KHUYENMAI.id_nbh)
            </td>
            <td>                
                @Html.ActionLink("Details", "Details", new { id = item.id_don })
            </td>
        </tr>
    }

</table>
