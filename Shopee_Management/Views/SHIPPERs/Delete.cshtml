@model Shopee_Management.Models.SHIPPER

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h2 {
        font-size: 24px;
        margin-bottom: 20px;
        color: #ee4d2d;
    }

    dl.dl-horizontal {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        text-align: left;
        margin: 0 auto;
        width: 50%; 
    }

    .dl-horizontal dt {
        width: 30%;
        padding: 10px;
        margin: 0;
    }

    .dl-horizontal dd {
        width: 70%;
        padding: 10px;
        margin: 0;
    }

    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

        .form-actions .btn {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .form-actions .btn:hover {
                background-color: #45a049;
            }
</style>

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4 style="text-align: center; margin-right: 30%;">SHIPPER</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ho_ten)
        </dd>

        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sdt)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dia_chi)
        </dd>

        <dt>
            Trạng thái
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trang_thai_shipper)
        </dd>

        <dt>
            Cty vận chuyển
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CTYVANCHUYEN.ten_cty)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />           
        </div>
     }
</div>
