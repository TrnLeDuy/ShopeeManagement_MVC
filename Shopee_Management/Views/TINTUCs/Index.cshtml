@model IEnumerable<Shopee_Management.Models.TINTUC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center; ">TIN TỨC </h2>

<p>
    @Html.ActionLink("Tạo mới", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tieu_de)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.noi_dung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ngay_dang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.THELOAITIN.ten_the_loai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tieu_de)
            </td>
            <td>
                <a href="@Url.Action("Details", "TINTUCs", new { id = item.id_tin_tuc }) " style="color: #666666;">@item.noi_dung</a>
                @*<a href="javascript:void(0)" class="open-details" data-id="@item.id_tin_tuc" style="color: #333;">@item.noi_dung</a>*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngay_dang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.THELOAITIN.ten_the_loai)
            </td>
        </tr>
    }

</table>

