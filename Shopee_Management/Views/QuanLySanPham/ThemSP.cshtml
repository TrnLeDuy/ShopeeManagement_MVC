@model Shopee_Management.Models.SANPHAM

@{
    ViewBag.Title = "Thêm Sản Phẩm Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ThemSP", "QuanLySanPham", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên Sản Phẩm :
            <div class="col-md-10">
                @Html.EditorFor(model => model.ten_sp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ten_sp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giá : 
            <div class="col-md-10">
                @Html.EditorFor(model => model.gia_sp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gia_sp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


