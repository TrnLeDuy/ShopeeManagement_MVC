@model Shopee_Management.Models.SANPHAM

@{
    ViewBag.Title = "Thêm Sản Phẩm Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .control-label {
        font-weight: bold;
        white-space: nowrap;
        width: 200px;
        margin-right: 285px;
    }

</style>
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ThemSP", "QuanLySanPham", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="text-align: center; color: #ee4d2d; font-size: 34px; margin-bottom: 20px">Sản Phẩm</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên Sản Phẩm :</label>
            <div class="control-label col-md-10">
                @Html.EditorFor(model => model.ten_sp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ten_sp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giá :</label> 
            <div class="control-label col-md-10">
                @Html.EditorFor(model => model.gia_sp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gia_sp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" style=" margin-bottom: 20px; background-color: #0ab618;color:white" />
            </div>
        </div>
    </div>
}


