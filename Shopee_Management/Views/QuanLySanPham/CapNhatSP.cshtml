@model Shopee_Management.Models.SANPHAM

<!-- Your edit form here -->
@using (Html.BeginForm("CapNhatProduct", "QuanLySanPham", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <!-- Product ID -->
    @Html.HiddenFor(model => model.id_sp)

    <div class="form-group">
        Tên Sản Phẩm :
        @Html.EditorFor(model => model.ten_sp)
    </div>
    <div class="form-group">
        Giá :
        @Html.EditorFor(model => model.gia_sp)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Delete" id="delete-product" />
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $("#delete-product").click(function () {
            var productId = @Model.id_sp; // Get the product ID from the model

            // Display a confirmation dialog
            if (confirm("Are you sure you want to delete this product?")) {
                // If the user confirms, send an AJAX request to delete the product
                $.ajax({
                    url: '/QuanLySanPham/XoaSP/' + productId,
                    type: 'POST',
                    success: function (result) {
                        if (result.success) {
                            alert("Product deleted successfully.");
                            window.location.href = '/QuanLySanPham/Index';
                        } else {
                            alert("Failed to delete the product.");
                        }
                    },
                    error: function () {
                        alert("An error occurred while trying to delete the product.");
                    }
                });
            }
        });
    });
</script>